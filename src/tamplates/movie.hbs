<div class="container">
    <div class="details-film">
        <div class="details-film__img">
            <img src="https://image.tmdb.org/t/p/w500/{{poster_path}}" alt="" />
        </div>
        <div class="details-film__text">
            <h4 class="details-film__name">{{title}}</h4>
            <div class="details-film__stat">
                <div class="details-film__stat-name">
                    <p>Vote / Votes</p>
                    <p>Popularity</p>
                    <p>Original Title</p>
                    <p>Genre</p>
                </div>
                <div class="details-film__stat-value">
                    <div class="details-film__stat-value__vote">
                        <div class="vote">
                            <p class="vote-text">{{vote_average}}</p>
                        </div>
                        <span>/</span>
                        <div class="votes">
                            <p class="votes-text">{{vote_count}}</p>
                        </div>
                    </div>
                    <p>{{popularity}}</p>
                    <p>{{original_title}}</p>
                    <div class="ganre">
                        {{#each genres}}
                        <p class="details-film__info">{{name}}</p>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="details-film__about">
                <p class="about">About</p>
                <p class="about-text">
                    {{overview}}
                </p>
            </div>
            <div class="details-film__btn">
                <div class="details-btn">
                    <input class="btn-watched" id='btn-watched' type="checkbox" data-id='{{id}}' data-lable="watch" />
                    <label aria-hidden="true" class="btn-watched__label" for="btn-watched"></label>
                    {{!-- <button class="btn-watched" data-id='{{id}}' data-lable="watch"> add to Watched</button> --}}
                </div>
                <div class="details-btn">
                    <input class="btn-queue" id='btn-queue' type="checkbox" data-id='{{id}}' data-lable="queue" />
                    <label aria-hidden="true" class="btn-queue__label" for="btn-queue"></label>
                    {{!-- <button class="btn-queue" data-id='{{id}}' data-lable="queue">add to queue</button> --}}
                </div>
            </div>
        </div>
    </div>
</div>